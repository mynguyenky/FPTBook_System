@using FPTBook_System.Data
@model FPTBook_System.Models.book


@{
    ViewData["Title"] = "Details";
}

<h1>Book Details</h1>

<div>
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Book Information</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    <strong>Title</strong>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.title)
                </dd>
                <dt class="col-sm-2">
                    <strong>Infomation</strong>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.info)
                </dd>
                <dt class="col-sm-2">
                    <strong>Book quantity</strong>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.bookquantity)
                </dd>
                <dt class="col-sm-2">
                    <strong>Price</strong>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.price)
                </dd>
               
                <dt class="col-sm-2">
                    <strong>Author</strong>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.author)
                </dd>
                <dd class="col-sm-12">
                    <img src="~/images/@Model.imgfile" class="img-fluid" alt="Book Image" style="max-height: 150px;" />
                    <br />@Model.imgfile
                </dd>
            </dl>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
